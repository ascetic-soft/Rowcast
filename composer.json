{
    "name": "ascetic-soft/rowcast",
    "description": "Lightweight DataMapper and QueryBuilder over PDO with DTO hydration and type casting",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "database",
        "datamapper",
        "query-builder",
        "pdo",
        "dto",
        "hydration",
        "type-casting",
        "orm",
        "mapping",
        "php"
    ],
    "authors": [
        {
            "name": "Andrey Borodulin",
            "email": "borodulin@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-pdo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "AsceticSoft\\Rowcast\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AsceticSoft\\Rowcast\\Tests\\": "tests/"
        }
    }
}
